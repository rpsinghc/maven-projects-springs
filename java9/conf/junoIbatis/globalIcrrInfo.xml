<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
  PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
        "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="GlobalIccrVO">



	<resultMap id="result" class="com.worldcheck.juno.vo.master.GlobalIccrVO">
		<result property="globalId" column="GLOBAL_ICRR_DATA_ID" />

		<result property="fatfFootnote" column="FATF_FOOTNOTE" />
		<result property="terrorismFootnote" column="TERRORISM_FOOTNOTE" />
		<result property="countryCheckFootnote" column="COUNTRY_CHECK_FOOTNOTE" />
		<result property="otherSanctionfootnote" column="OTHER_SANCTIONS_FOOTNOTE" />


	</resultMap>



	<select id="list" resultMap="result">
		select
		gicrr.GLOBAL_ICRR_DATA_ID,
		gicrr.FATF_FOOTNOTE, gicrr.TERRORISM_FOOTNOTE ,gicrr.COUNTRY_CHECK_FOOTNOTE,
		gicrr.OTHER_SANCTIONS_FOOTNOTE

		from RG_GLOBAL_ICRR_INFO_MASTER gicrr 
		
	</select>

	<insert id="insert" parameterClass="com.worldcheck.juno.vo.master.GlobalIccrVO">
		insert into RG_GLOBAL_ICRR_INFO_MASTER (
		GLOBAL_ICRR_DATA_ID,
		FATF_FOOTNOTE,TERRORISM_FOOTNOTE,COUNTRY_CHECK_FOOTNOTE,OTHER_SANCTIONS_FOOTNOTE,UPDATED_BY,UPDATED_ON
		)values (
		RG_GLOBAL_ICRR_INFO_MST_SEQ.NEXTVAL, #fatfFootnote#,
		#terrorismFootnote#,#countryCheckFootnote#,#otherSanctionfootnote#,#userName#,sysdate
		)       
	 </insert>

	<update id="update" parameterClass="com.worldcheck.juno.vo.master.GlobalIccrVO">
		update RG_GLOBAL_ICRR_INFO_MASTER set

		FATF_FOOTNOTE = #fatfFootnote#,
		TERRORISM_FOOTNOTE = #terrorismFootnote#,
		COUNTRY_CHECK_FOOTNOTE = #countryCheckFootnote#,
		OTHER_SANCTIONS_FOOTNOTE = #otherSanctionfootnote#,
		UPDATED_BY =#userName#,
		UPDATED_ON = sysdate
		where
		GLOBAL_ICRR_DATA_ID = #globalId#
	  </update>

</sqlMap>