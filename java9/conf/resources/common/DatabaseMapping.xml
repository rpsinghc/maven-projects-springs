    <data-source name="sybase">
        <!-- record size for sybase depends onthe page size -->
        <!--     page size           recordsize          -->
        <!--        2k                 1948              -->
        <!--        4k                 3988              -->
        <!--        8k                 8068              -->
        <!--        16k                16228             -->
        <!--   The default value is 1948 for 2k pagesize -->

        <!-- max size of a multi line string is dependent on the    -->
        <!-- page size of sybase. The max length of any multiline   -->
        <!-- string dataslot cannot exceed 2000 chars even if the   -->
        <!-- pg sz is more than 2000 chars. Please look for record  -->
        <!-- size relationship with pagesize above for more detail  -->
        <!-- page size           recommended  -->
        <!--               max multiline string size  -->
        <!--  2k                 256        -->
        <!--  4k                 256        -->
        <!--  8k                 2000       -->
        <!--  16k                2000       -->
        <!--The default value is 256 for 2k pagesize -->

        <max-table-name>30</max-table-name>
        <record-size>8068</record-size>
        <ddl-autocommit>true</ddl-autocommit>
        <type-mapping>
            <mapping>
                <java>java.lang.Boolean</java>
                <dataslot>BOOLEAN</dataslot>
                <database>TINYINT</database>
                <size bytes="1"></size>
            </mapping>
            <mapping>
                <java>java.lang.Integer</java>
                <dataslot>LONG</dataslot>
                <database>NUMERIC</database>
                <size bytes="17"/>
            </mapping>
            <mapping>
                <java>java.lang.Long</java>
                <dataslot>LONG</dataslot>
                <database>NUMERIC</database>
                <size bytes="17"/>
            </mapping>
            <mapping>
                <java>java.lang.Double</java>
                <dataslot>DOUBLE</dataslot>
                <database>DOUBLE PRECISION</database>
                <size bytes="8"/>
            </mapping>
            <mapping>
                <java>java.lang.String</java>
                <dataslot>STRING</dataslot>
                <database>VARCHAR</database>
                <database-mb>UNIVARCHAR</database-mb>
                <size bytes="2000">2000</size>
            </mapping>
            <mapping>
                <java>java.sql.Date</java>
                <dataslot>DATETIME</dataslot>
                <database>DATETIME</database>
                <size bytes="8"/>
            </mapping>
            <mapping>
                <java>java.lang.Object</java>
                <dataslot>OBJECT</dataslot>
                <database>IMAGE</database>
            </mapping>
            <mapping>
                <dataslot>URL</dataslot>
                <database>VARCHAR</database>
                <database-mb>UNIVARCHAR</database-mb>
                <size bytes="256">256</size>
            </mapping>
            <mapping>
                <dataslot>DOCUMENT</dataslot>
                <database>VARCHAR</database>
                <database-mb>UNIVARCHAR</database-mb>
                <size bytes="64">64</size>
            </mapping>
            <mapping>
                <java>java.math.BigDecimal</java>
                <dataslot>DECIMAL</dataslot>
                <database>DECIMAL</database>
                <!-- the max precision allowed is 38. Scale can always be equal to the -->
                <!-- precision size in sybase. Note that if the precision and scale are the scale -->
                <!-- then all the value is after the decimal point or in other words values -->
                <!-- will always be less than 1 -->
                <size bytes="17">28,15</size>
            </mapping>
            <mapping>
                <java>java.math.BigDecimal</java>
                <dataslot>CURRENCY</dataslot>
                <database>DECIMAL</database>
                <size bytes="17">28,3</size>
            </mapping>
            <mapping>
