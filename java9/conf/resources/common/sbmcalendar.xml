<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE calendars SYSTEM "sbmcalendar.dtd">

<!-- year = 4 digit number -->
<!-- month = { Jan, Feb, Mar, Apr, May, Jun, Jul, Aug, Sep, Oct, Nov, Dec} -->
<!-- dow = {Sun, Mon, Tue, Wed, Thu, Fri, Sat} -->
<!-- day = 1 to 31 -->
<!-- occurence = {first, second, third, fourth, fifth, last, all} -->
<calendars>
    <calendar name="sbmcalendar">
        <description>SBM Calendar</description>

        <locale language="en" country="US"/>
        <timezone zoneid="America/Los_Angeles"/>

        <lunch-hours start-time="1200" end-time="1300"/>

        <business-hours>
            <description>business hours</description>
            <business-hour start-time="0800" end-time="1700"/>
        </business-hours>

        <week-end>
            <holiday name="Sunday" dow="Sun" />
            <holiday name="Saturday" dow="Sat" />
        </week-end>

        <!-- Fixed holidays are the ones that dont change over the years like New Year, 
             President's day, Memorial Day
        -->
        <fixed-holidays>
            <holiday name="New Year Day" month="Jan" day="1"/>
            <holiday name="President Day" month="Feb" dow="Mon" occurrence="third"/>
            <holiday name="Memorial Day" month="May" dow="Mon" occurrence="last"/>
            <holiday name="Independence Day" month="Jul" day="4"/>
            <holiday name="Labor Day" month="Sep" dow="Mon" occurrence="first"/>
            <holiday name="Thanks Giving Day" month="Nov" dow="Thu" occurrence="last"/>
            <holiday name="Christmas Eve" month="Dec" day="24"/>
            <holiday name="Christmas" month="Dec" day="25"/>
        </fixed-holidays>

        <!-- Additional holidays for specific years. Typically these are floating holidays 
             or compensatory holidays for fixed holidays that fall on weekends
        -->
        <holidays year="2005" override="true">
            <holiday name="New Year's Day Sub" month="Jan" day="3"/>
            <holiday name="Day After Thanks Giving" month="Nov" day="25"/>
            <holiday name="Christmas Eve Sub" month="Dec" day="26"/>
            <holiday name="Christmas Sub" month="Dec" day="27"/>
            <holiday name="New Year's Eve Sub" month="Dec" day="30"/>
        </holidays>
        <holidays year="2006" override="true">
            <holiday name="New Year's Day Sub" month="Jan" day="2"/>
            <holiday name="New Year's Eve Sub" month="Dec" day="29"/>
            <holiday name="Christmas Eve Sub" month="Dec" day="22"/>
            <holiday name="Day After Thanks Giving" month="Dec" day="1"/>
        </holidays>

    </calendar>
</calendars>
