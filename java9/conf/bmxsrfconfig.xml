<?xml version="1.0" encoding="ISO-8859-1" ?>
<xsrf-config>
	<!-- 
		The url to redirect on observation of possible XSRF attack. It should be relative to the context path.
		It is the responsibility of this target url, to invalidate the session and display the error message to the user. 
	-->
	<redirect-url-on-attack>/bpmportal/xsrf_handler.jsp</redirect-url-on-attack>
	
	<!--
		If enabled, the enable-user-agent-check checks the Http User Agent in every request to make sure that the request is came
		from the same browser from where the user was logged in for that session.
	-->
	<enable-user-agent-check>false</enable-user-agent-check>

	<!--
		If enabled, the enable-user-remote-address-check checks the user host address in every request to make sure that the request 
		is came from the same host from where the user was logged in for that session.
	-->
	<enable-user-remote-address-check>false</enable-user-remote-address-check>
	
	<!-- 
		exclude-urls defines all urls that must be excluded from checking the XSRF attacks.
		Each URL should be relative to the context path of the portal application. Individual url-pattern elements 
		uses the ANT style pattern expression.
	-->
    <exclude-url-patterns>
    	<url-pattern>/bpmportal/*.jsp</url-pattern>
    	<url-pattern>/bpmportal/management/AnalysisService</url-pattern>
        <url-pattern>/**/*.css</url-pattern>
        <url-pattern>/**/*.js</url-pattern>
        <url-pattern>/**/*.png</url-pattern>
        <url-pattern>/**/*.gif</url-pattern>
        <url-pattern>/**/*.swf</url-pattern>
        <url-pattern>/bpmportal/common/repeatsection/*.portal</url-pattern>
		<url-pattern>/bpmportal/common/bosection/*.portal</url-pattern>
		<url-pattern>/bpmportal/common/forms/*.form</url-pattern> 
    </exclude-url-patterns>
</xsrf-config>
